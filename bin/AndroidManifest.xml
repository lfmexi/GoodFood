<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goodfood"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.goodfood.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.goodfood.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.goodfood.Registro"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name="com.example.goodfood.Recupera"
            android:label="@string/title_activity_recupera" >
        </activity>
        <activity
            android:name="com.example.goodfood.CompletaPerfil"
            android:label="@string/title_activity_completa_perfil" >
        </activity>
        <activity
            android:name="com.example.goodfood.ItemListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name="com.example.goodfood.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
        <activity
            android:name="com.example.goodfood.Menu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.example.goodfood.MenuPrincipal"
            android:label="@string/title_activity_menu_principal" >
        </activity>
        <activity
            android:name="com.example.goodfood.CreaReceta"
            android:label="@string/title_activity_crea_receta" >
        </activity>
        <activity
            android:name="com.example.goodfood.BuscaReceta"
            android:label="@string/title_activity_busca_receta" >
        </activity>
        <activity
            android:name="com.example.goodfood.Recetas"
            android:label="@string/title_activity_recetas" >
        </activity>
        <activity
            android:name="com.example.goodfood.Ejercicios"
            android:label="@string/title_activity_ejercicios" >
        </activity>
        <activity
            android:name="com.example.goodfood.Perfil"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name="com.example.goodfood.VisualizaReceta"
            android:label="@string/title_activity_visualiza_receta" >
        </activity>
        <activity
            android:name="com.example.goodfood.ComentarioReceta"
            android:label="@string/title_activity_comentario_receta" >
        </activity>
        <activity
            android:name="com.example.goodfood.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.goodfood.DetalleReceta"
            android:label="@string/title_activity_detalle_receta" >
        </activity>
        <activity
            android:name="com.example.goodfood.DetalleEjercicio"
            android:label="@string/title_activity_detalle_ejercicio" >
        </activity>
    </application>
	<uses-permission android:name="android.permission.INTERNET" /> 
</manifest>
