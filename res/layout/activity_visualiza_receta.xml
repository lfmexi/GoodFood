<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VisualizaReceta" >

	<RatingBar
	    android:id="@+id/ratingBar1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imagenUsuario"
	    android:layout_centerHorizontal="true" />

	<Button
	    android:id="@+id/botonMostrarDescrpicion"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/ratingBar1"
	    android:layout_below="@+id/ratingBar1"
	    android:text="Mostrar DescripciÃ³n" />

	<Button
	    android:id="@+id/botonComentar"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/botonMostrarDescrpicion"
	    android:layout_alignBottom="@+id/botonMostrarDescrpicion"
	    android:layout_toRightOf="@+id/botonMostrarDescrpicion"
	    android:text="Comentar" />

	<ListView
	    android:id="@+id/listaComentarios"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/botonMostrarDescrpicion"
	    android:layout_below="@+id/botonMostrarDescrpicion"
	    android:layout_marginTop="20dp" >
	</ListView>

	<ImageView
	    android:id="@+id/imagenUsuario"
	    android:layout_width="140dp"
	    android:layout_height="140dp"
	    android:layout_alignLeft="@+id/ratingBar1"
	    android:layout_below="@+id/labelNombreReceta"
	    android:src="@drawable/ic_launcher" />

	<TextView
	    android:id="@+id/labelNombreReceta"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imagenUsuario"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="18dp"
	    android:text="Large Text"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<Button
	    android:id="@+id/botonAgregarReceta"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/labelNombreReceta"
	    android:layout_alignBottom="@+id/labelNombreReceta"
	    android:layout_toRightOf="@+id/imagenUsuario"
	    android:text="Argegar receta" />
    
</RelativeLayout>
